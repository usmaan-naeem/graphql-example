{
  "compilerOptions": {
    "target": "esnext",                       
    "module": "ESNext",                                
    "rootDir": "./src",                                 
    "moduleResolution": "node",                    
    "outDir": "./dist",        
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                   
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
